{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "tasks": {
        "ClusterId": "tasks",
        "Match": {
          "Path": "/tasks/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/tasks" }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/notifications" }
        ]
      }
    },
    "Clusters": {
      "auth": {
        "Destinations": {
          "authService": {
            "Address": "http://auth-service:80/"
          }
        }
      },
      "tasks": {
        "Destinations": {
          "taskService": {
            "Address": "http://task-service:80/"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notificationService": {
            "Address": "http://notification-service:80/"
          }
        },
        "HttpRequest": {
          "Version": "2.0",
          "VersionPolicy": "RequestVersionOrHigher"
        }
      }
    }
  }
}